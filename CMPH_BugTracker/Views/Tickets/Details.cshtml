@using CMPH_BugTracker.Helpers
@model CMPH_BugTracker.Models.Ticket
@{
    ViewBag.Title = "Details";
}
<div class="row mt">
    <div class="col-lg-12">
        <h4><i class="fa fa-angle-right"></i>Ticket Details</h4>
        <div class="col-lg-12">
            <div class="form-panel">
                <h4>Ticket</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Body)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Body)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Created)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Created)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Updated)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Updated)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TicketStatus)
                    </dt>
                    <dd>
                        @TicketsHelper.GetTicketStatus(Model.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TicketPriority)
                    </dt>
                    <dd>
                        @TicketsHelper.GetTicketPriority(Model.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.TicketType)
                    </dt>
                    <dd>
                        @TicketsHelper.GetTicketType(Model.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.OwnerUserId)
                    </dt>
                    <dd>
                        @TicketsHelper.GetTicketOwner(Model.Id)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AssignedUserId)
                    </dt>
                    <dd>
                        @*@TicketsHelper.ListUsersOnTicket(Model.Id)*@
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.ProjectId)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProjectId)
                    </dd>

                    <dt>

                    </dt>

                    <dd>
                        @if (User.IsInRole("Admin"))
                        {
                            @Html.ActionLink("EditTicket", "Edit", new { id = Model.Id }) @:|
                            @Html.ActionLink("DeleteTicket", "Delete", new { id = Model.Id })
                        }
                    </dd>
                </dl>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-panel">
                <h4><i class="fa fa-angle-right"></i>Ticket Comments @Model.TicketComments.Count</h4>
                <div class="row-lg-6">
                    @foreach (var ticketComment in TicketsHelper.TicketCommentsOnTicket(Model.Id))
                    {
                        <table class="table">
                            <tr>
                                <td>
                                    @ticketComment.Created
                                </td>
                                <td>
                                    @ticketComment.Updated
                                </td>
                                <td>
                                    @ticketComment.Title
                                </td>
                                <td>
                                    @ticketComment.Body
                                </td>
                                <td>
                                    @TicketCommentsHelper.GetTicketCommentOwner(ticketComment.Id)
                                </td>
                            </tr>
                        </table>
                        <div class="row">
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="centered">
                                    @Html.ActionLink(" Edit ", "Edit", "TicketComments", new { ticketComment.Id }, null) |
                                    @Html.ActionLink(" Delete ", "Delete", "TicketComments", new { ticketComment.Id }, null) |
                                    @Html.ActionLink(" Details ", "Details", "TicketComments", new { ticketComment.Id }, null)
                                </div>
                            }
                        </div>
                    }
                </div>
                <h4><i class="fa fa-angle-right"></i>Create Ticket Comment</h4>
                <div class="row">
                    @if (User.IsInRole("Admin"))
                    {
                        using (Html.BeginForm("Create", "TicketComments", FormMethod.Post, new { enctype = "Multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("TicketId", Model.Id)

                            <div class="form-group">
                                @Html.Label("Title", htmlAttributes: new { @class = "form-horizontal col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextArea("Title", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Title", htmlAttributes: new { @class = "form-horizontal col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextArea("Title", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-round btn-success" />
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-panel">
                <h4><i class="fa fa-angle-right"></i>Ticket Attachments @Model.TicketAttachments.Count</h4>
                <div class="row-lg-6">
                    @foreach (var ticketAttachment in Model.TicketAttachments.OrderByDescending(c => c.Created))
                    {
                        <table class="table">
                            <tr>
                                <td>
                                    @ticketAttachment.Title
                                </td>
                                <td>
                                    @ticketAttachment.MediaURL
                                </td>
                                <td>
                                    <a href="@Url.Content(ticketAttachment.MediaURL)" target="_blank">@ticketAttachment.Title</a>
                                    @*@Html.ActionLink((string)ticketAttachment, "DownloadFile", new { filename = ticketAttachment });*@
                                </td>
                                <td></td>
                            </tr>
                        </table>
                        <div class="row">
                            @if (User.IsInRole("Admin"))
                            {
                            <div class="centered">
                                @Html.ActionLink(" Edit ", "Edit", "TicketAttachments", new { ticketAttachment.Id }, null) |
                                @Html.ActionLink(" Delete ", "Delete", "TicketAttachments", new { ticketAttachment.Id }, null) |
                                @Html.ActionLink(" Details ", "Details", "TicketAttachments", new { ticketAttachment.Id }, null)
                            </div>
                            }
                        </div>
                    }
                        </div>
                        <h4><i class="fa fa-angle-right"></i>Create Ticket Attachment</h4>
                        <div class="row-lg-6">
                            @if (User.IsInRole("Admin"))
                            {
                                using (Html.BeginForm("Create", "TicketAttachments", FormMethod.Post, new { enctype = "Multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("TicketId", Model.Id)
                                    <div class="form-group">
                                        @Html.Label("Title", htmlAttributes: new { @class = "form-horizontal col-md-2" })
                                        <div class="col-md-10">
                                            @Html.TextArea("Title", new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TicketAttachments, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <input name="image" type="file" class="form-control" id="fileUpload" />
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.TicketAttachments, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TicketAttachments, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Create" class="btn btn-round btn-success" />
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
        </div>
    </div>
</div>