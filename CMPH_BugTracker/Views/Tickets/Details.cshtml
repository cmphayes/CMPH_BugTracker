@model CMPH_BugTracker.Models.Ticket
@{
    ViewBag.Title = "Details";
}
<h3><i class="fa fa-angle-right"></i>Ticket Details</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <div>
                <h4>Ticket</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Body)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Body)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Created)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Created)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Updated)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Updated)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AssignedUserId)
                    </dt>
                    @foreach (var user in Model)
                    {
                        <dd>
                            @Html.DisplayFor(model => model.AssignedUserId)
                        </dd>
                    }
                </dl>
            </div>
            <p>
                @if (User.IsInRole("Admin,ProjectManager"))
                {
                    @Html.ActionLink("EditProject", "Edit", new { id = Model.Id })
                    @Html.ActionLink("DeleteProject", "Delete", new { id = Model.Id })
                }
            </p>
        </div>
        <article>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                        @Html.Raw(Model.Body)
                        <br />
                    </div>
                </div>
                <div class="row">
                    @foreach (var ticketComment in Model.TicketComments)
                    {
                        <div class="panel panel-default container">
                            <div class="panel-heading row">
                                <div class="col-md-10">
                                    <div class="panel-body row">@ticketComment.Title</div>
                                    <div class="panel-body row">@ticketComment.Body</div>
                                    <div class="panel-body row">@ticketComment.OwnerUserId</div>
                                    <div class="panel-body row">@ticketComment.Created</div>
                                    <div class="panel-body row">@ticketComment.Updated</div>
                                    <div class="panel-footer row">Posted: @ticketComment.Created.ToString("f")</div>
                                    @if (User.IsInRole("Admin,ProjectManager,Developer"))
                                    {
                                        <div class="boxed-col-md-2">
                                            @Html.ActionLink(" Edit ", "Edit", "Ticket", new { ticketComment.Id, id = Model.Id }, null)
                                            @Html.ActionLink(" Delete ", "Delete", "Ticket", new { ticketComment.Id, id = Model.Id }, null)
                                            @Html.ActionLink(" Details ", "Details", "Ticket", new { ticketComment.Id, id = Model.Id }, null)
                                        </div>
                                    }
                                </div>
                                <hr />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </article>
        <hr>
        <div>
            <div>
                @if (User.IsInRole("Admin,ProjectManager,Developer,Submitter"))
                {
                    using (Html.BeginForm("Create", "TicketsComments", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("ProjectId", Model.Id)
                        @Html.HiddenFor(model => model.Id)
                        <div class="form-group">
                            @Html.Label("Ticket Comment Title", new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextArea("ticketCommentTitle", new { @class = "form-control", placeholder = "Ticket Comment Title", rows = "4" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Ticket Comment Body", new { @class = "col-md-2 control-label" })
                            <div class="col-md-8">
                                @Html.TextArea("ticketCommentBody", new { @class = "form-control", placeholder = "Ticket Comment Body", rows = "4" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create Ticket" class="btn btn-default" />
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <hr>
        <p>
            @Html.ActionLink("Back to All Projects", "Index")
        </p>
        <p>
            @Html.ActionLink("Back to MyProjects", "MyTickets")
        </p>
        @if (User.IsInRole("Admin,ProjectManager,Developer,Submitter"))
        {
            <p>
                @Html.ActionLink("Back to Tickets I Created", "CreatedTickets")
            </p>
            <p>
                @Html.ActionLink("Assign Users to Ticket", "TicketAssignment", "Admin")
            </p>
        }
    </div>
</div>