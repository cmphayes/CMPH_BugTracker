@using CMPH_BugTracker.Helpers
@model CMPH_BugTracker.Models.Ticket

<div class="col-lg-6">
    <div class="form-panel">
        <h4><i class="fa fa-angle-right"></i>Ticket History @Model.TicketHistories.Count</h4>
        <div class="row-lg-6">
            @foreach (var ticketHistory in Model.TicketHistories)
            {
                <table class="table">
                    <tr>
                        <td>
                            @ticketHistory.Changed
                        </td>
                        <td>
                            @TicketsHelper.GetTicketEditor(ticketHistory.UserId)
                        </td>
                        <td>
                            @ticketHistory.Property
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
