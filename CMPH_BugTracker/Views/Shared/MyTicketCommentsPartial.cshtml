@model IEnumerable<CMPH_BugTracker.Models.TicketComment>
@{
    ViewBag.Title = "CreatedTicketComments";
}
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<h3><i class="fa fa-angle-right"></i>Ticket Comments</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Body)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>
                    <th></th>
                </tr>
                @foreach (var ticketComment in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => ticketComment.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ticketComment.Body)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ticketComment.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ticketComment.Updated)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = ticketComment.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = ticketComment.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = ticketComment.Id })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

