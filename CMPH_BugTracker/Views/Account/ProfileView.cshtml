}
<h2>ProfileView</h2>
<div class="row mt">
    <div class="col-lg-12">
        <div class="row content-panel">
            <div class="col-md-4 profile-text mt mb centered">
                <div class="right-divider hidden-sm hidden-xs">
                    <h4>@User.Identity.GetFullName()</h4>
                    <h6><a class="nav-link js-scroll-trigger" href=@Url.Action("EditProfile", "Account")></a></h6>
                    <h4>@User.Identity.GetDisplayName()</h4>
                    <h6><a class="nav-link js-scroll-trigger" href=@Url.Action("EditProfile", "Account")></a></h6>
