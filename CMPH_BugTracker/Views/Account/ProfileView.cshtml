@model CMPH_BugTracker.Models.ApplicationUser
@using CMPH_BugTracker.Extensions
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;
@using CMPH_BugTracker.Helpers;
@{
    ViewBag.Title = "ProfileView";
}
<h2>ProfileView</h2>
<hr />
<div class="row content-panel">
    <div class="col-md-8">
        <div>
            <h4>
                @Html.ActionLink("Log Out", "LogOff", "Account", null, new { @class = "btn btn-theme fa fa-cogs" })
            </h4>
            <h6></h6>
            <h4></h4>
            <h6></h6>
            <h4></h4>
            <h6></h6>
        </div>
    </div>
    <!-- /col-md-4 -->
    <div class="col-md-4 profile-text">
        <h3>@User.Identity.GetFullName()</h3>
        <h6></h6>
        <p></p>
        <br>
        <p></p>

    </div>
    <!-- /col-md-4 -->
</div>
<!-- /row -->
<!-- /col-lg-12 -->
<div class="row content-panel">
    <div class="panel-heading">
        <ul class="nav nav-tabs nav-justified">
            <li class="active">
                <a data-toggle="tab" href="#tasks" class="contact-map">Tasks</a>
            </li>
            <li>
                <a data-toggle="tab" href="#edit">Edit Profile</a>
            </li>
            <li>
                <a data-toggle="tab" href="#notifications">Notifications <span class="badge bg-primary">@Model.TicketNotifications.Count</span></a>
            </li>
        </ul>
    </div>
    <!-- /panel-heading -->
    <div class="panel-body">
        <div class="tab-content">
            <div id="tasks" class="tab-pane active">
                <div class="row">
                    <div class="col-md-6 detailed">
                        <div class="row">
                            <h4>Projects</h4>
                            <div class="col-md-8 col-md-centered-2 mt">
                                <p>
                                    <a class="nav-link js-scroll-trigger btn btn-theme04" href=@Url.Action("MyProjects", "Projects")><b>My Assigned Projects</b></a>
                                </p>
                                <br>
                                <p>
                                    <a class="nav-link js-scroll-trigger btn btn-theme04" href=@Url.Action("CreatedProjects", "Projects")><b>Projects I Created</b></a>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <h4>Tickets</h4>
                            <div class="col-md-8 col-md-centered-2 mt">
                                <p>
                                    <a class="nav-link js-scroll-trigger btn btn-theme04" href=@Url.Action("CreatedTickets", "Tickets")><b>Tickets I Created</b></a>
                                </p>
                                <br>
                                <p>
                                    <a class="nav-link js-scroll-trigger btn btn-theme04" href=@Url.Action("MyTickets", "Tickets")><b>My Assigned Tickets</b></a>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <h4>TicketComments</h4>
                            <div class="col-md-8 col-md-centered-2 mt">
                                <p>
                                    <a class="nav-link js-scroll-trigger btn btn-theme04" href=@Url.Action("CreatedTicketComments", "TicketComments")><b>Ticket Comments I Created</b></a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="edit" class="tab-pane">
                <div class="row">
                    <div class="col-lg-12 col-lg-centered-2 detailed">
                        @Html.Partial("EditProfilePartial", Model)
                    </div>
                    <!-- /col-lg-8 -->
                </div>
            </div>
            <div id="notifications" class="tab-pane">
                <h4>Notifications</h4>
                <div class="col-md-8 col-md-centered-2 mt">
                    <p>
                        @Html.ActionLink("View All Notifications", "Index", "TicketNotifications", null, new { @class = "nav-link js-scroll-trigger btn btn-theme04" })
                    </p>
                    <br>
                    <p>
                        @Html.ActionLink("View Unread Notifications", "Index", "UnreadTicketNotifications", null, new { @class = "nav-link js-scroll-trigger btn btn-theme04" })
                    </p>
                    <br>
                    <p>
                        @Html.ActionLink("View Read Notifications", "Index", "ReadTicketNotifications", null, new { @class = "nav-link js-scroll-trigger btn btn-theme04" })
                    </p>
                </div>
            </div>
            </div>
        </div>
</div>
