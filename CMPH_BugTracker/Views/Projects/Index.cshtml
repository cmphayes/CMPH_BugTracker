@model IEnumerable<CMPH_BugTracker.Models.Project>
@{
    ViewBag.Title = "Index";
}
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<h3><i class="fa fa-angle-right"></i>All Projects</h3>
<div class="row mt">
    <div class="col-lg-12">
        <div class="form-panel">
            @if (User.IsInRole("Admin"))
            {
                @Html.ActionLink("Create New", "Create")
            }
            <div class="row"><br /></div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <a>Title</a>
                        </th>
                        <th>
                            <a>Body</a>
                        </th>
                        <th>
                            <a>Created</a>
                        </th>
                        <th>
                            <a>Updated</a>
                        </th>
                        <th>
                            <a>Owner User</a>
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model)
                    {
                    <tr>
                        <td>
                            @Html.Raw(project.Title)
                        </td>
                        <td>
                            @Html.Raw(project.Body)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.Updated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.OwnerUserId)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { Id = project.Id }, new { @class = "btn btn-theme" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


