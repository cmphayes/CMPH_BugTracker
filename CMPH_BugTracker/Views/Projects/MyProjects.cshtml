@model IEnumerable<CMPH_BugTracker.Models.Project>
@{
    ViewBag.Title = "MyProjects";
}
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<h3><i class="fa fa-angle-right"></i>My Projects</h3>
<div class="row mt">
    <div class="col-lg-12">
        @foreach (var project in Model)
        {
            <div class="form-panel">
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Body)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().Updated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().OwnerUserId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FirstOrDefault().AssignedUserId)
                        </th>
                        <th>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            @Html.Raw(project.Title)
                        </td>
                        <td>
                            @Html.Raw(project.Body)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.Created)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.Updated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.OwnerUserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => project.AssignedUserId)
                            @*<span>@user.FullName</span> @:|*@
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { Id = project.Id })

                            @if (User.IsInRole("Admin"))
                            {
                                @Html.ActionLink("Edit", "Edit", new { Id = project.Id }) @:|
                                @Html.ActionLink("Delete", "Delete", new { Id = project.Id })
                            }
                        </td>
                    </tr>
                </table>
                <hr />
                @foreach (var ticket in project.Tickets.OrderByDescending(p => p.Created))
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <p>Title</p>
                                </th>
                                <th>
                                    <p>Body</p>
                                </th>
                                <th>
                                    <p>OwnerUserId</p>
                                </th>
                                <th>
                                    <p>AssignedUserId</p>
                                </th>
                                <th>
                                    <p>Created</p>
                                </th>
                                <th>
                                    <p>Updated</p>
                                </th>
                                <th>
                                    <p>TicketPriority</p>
                                </th>
                                <th>
                                    <p>TicketStatus</p>
                                </th>
                                <th>
                                    <p>TicketType</p>
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Body)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.OwnerUserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.AssignedUserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.Updated)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.TicketPriority)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.TicketStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => ticket.TicketType)
                                </td>
                                <td>
                                    @if (User.IsInRole("Admin,ProjectManager,Developer,Submitter"))
                                    {
                                        <div class="boxed-col-md-2">
                                            @Html.ActionLink("Edit ", "Edit", "Ticket", new { ticket.Id, id = project.Id }, null) |
                                            @Html.ActionLink("Delete ", "Delete", "Ticket", new { ticket.Id, id = project.Id }, null) |
                                            @Html.ActionLink("Details ", "Details", "Ticket", new { ticket.Id, id = project.Id }, null)
                                        </div>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
                <hr />
            </div>
        }
    </div>
</div>


