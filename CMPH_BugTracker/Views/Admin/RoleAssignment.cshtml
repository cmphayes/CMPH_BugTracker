
@{
    ViewBag.Title = "RoleAssignment";
}



<div class="container">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-10">
            <div class="row">
                <div class="col-md-12 text-centered">
                    <h2>Role Assignment</h2>
                </div>
            </div>

            <div class=" row">
                <div class="col-md-6 text-center">
                    @Html.Label("SelectUser")
                </div>
                <div class="col-md-6 text-center">
                    @Html.Label("SelectRole")
                </div>
            </div>


            @Html.BeginForm()
            {
            @Html.AntiForgeryToken()
            <div class=" row">
                <div class="col-md-6 text-center">
                    @Html.DropDownList("Users", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-6 text-center">
                    @Html.DropDownList("Roles", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class=" row">
                <div class="col-md-12 text-center">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </div>            
        </div>
    </div>
</div>


